                <a href="/home/moviedetail?id=@movie.MovieId" class="w-[360px] h-[515px]">
                    <img class="rounded-t-lg  w-full h-full " src="@movie.Image" alt="" />
                </a>

                <div class="p-5">
                    <a href="/home/moviedetail?id=@movie.MovieId">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                            @movie.Title
